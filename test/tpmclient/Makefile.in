srcdir = @srcdir@
VPATH  = @srcdir@

RESOURCE_MGR_HEADERS := $(shell ls $(srcdir)/../resourcemgr/*.h )
SAMPLE_OBJS := $(shell ls $(srcdir)/../common/sample/*.c | sed 's&$(srcdir)/\.\./common/sample&lib&' | sed 's/\.c$$/\.o /' )
SAMPLE_HEADERS := $(shell ls $(srcdir)/../common/sample/*.h )
TPMSOCKETS_SRC := $(shell ls $(srcdir)/../../tcti/tpmsockets/*.cpp | sed 's&$(srcdir)/\.\.\/\.\.\/tpmsockets&lib&' )
TPMSOCKETS_HEADERS := $(shell ls $(srcdir)/../../tcti/tpmsockets/*.h )
COMMON_OBJS := $(shell ls $(srcdir)/../../common/*.c | sed 's&$(srcdir)/\.\./\.\./common&lib&' | sed 's/\.c$$/\.o /' )
COMMON_HEADERS := $(shell ls $(srcdir)/../../common/*.h )
SYSAPI_HEADERS := $(shell ls $(srcdir)/../../sysapi/include/*.h )

TPMCLIENT_HEADERS = $(srcdir)/tpmclient.h $(SAMPLE_HEADERS) $(TPMSOCKETS_HEADERS) $(COMMON_HEADERS) $(SYSAPI_HEADERS)


CC = @CC@
CXX = @CXX@

INCLUDE_DIRS = -I$(srcdir)/../../sysapi/include -I$(srcdir) -I$(srcdir)/../../tcti/tpmsockets -I$(srcdir)/../../common -I$(srcdir)/../common/sample -I$(srcdir)/../../resourcemgr

CFLAGS = @CFLAGS@ $(INCLUDE_DIRS)
CXXFLAGS = @CXXFLAGS@ $(INCLUDE_DIRS)

LIBS = ../../sysapi/libtpm.a
LIB_DIR = lib

OBJS = $(SYSCONTEXT_OBJS) $(SAMPLE_OBJS) $(COMMON_OBJS) lib/sapiclient_tpmsockets.o lib/tpmclient.o

.PHONY: all clean
all: tpmclient

$(LIBS):
	$(MAKE) -C ../../sysapi

$(OBJS): | $(LIB_DIR)

tpmclient: $(OBJS) $(LIBS) Makefile
	$(CXX) $(CXXFLAGS) $(OBJS) $(LIBS) -o $@

$(LIB_DIR)/%.o: %.cpp $(TPMCLIENT_HEADERS) Makefile
	$(CXX) $(CFLAGS) -c $< -o $@

$(LIB_DIR)/%.o: ../common/sample/%.c $(COMMON_HEADERS) Makefile $(SYSAPI_HEADERS) $(SAMPLE_HEADERS)
	$(CC) $(CFLAGS) -c $< -o $@

# Build special version of tpmsockets code for test application.
$(LIB_DIR)/sapiclient_tpmsockets.o: $(TPMSOCKETS_SRC) # $(TPMSOCKETS_HEADERS) Makefile $(SYSAPI_HEADERS) $(COMMON_HEADERS)
	$(CXX) -DSAPI_CLIENT $(CXXFLAGS) -c $< -o $@

$(LIB_DIR)/%.o: ../../common/%.c $(COMMON_HEADERS) Makefile $(SYSAPI_HEADERS) $(COMMON_HEADERS)
	$(CC) $(CFLAGS) -c $< -o $@

$(LIB_DIR):
	-@mkdir -p $@

clean:
	@rm -rf tpmclient $(LIB_DIR)
	@$(MAKE) -C ../../sysapi -f Makefile clean
